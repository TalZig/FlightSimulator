<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Window"
        Height="300"
        Width="600">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Insert ip" Margin="5"/>
        <TextBox Grid.Row="1" Name="MyTextBox" Margin="5" />
        <Label Grid.Row ="2" Content="Insert port" Margin="3"/>
        <TextBox Grid.Row="3" Name="MyTextBox2" Margin="5,2,5,8" />
        <Button Grid.Row="4" Content="OK" Margin="5" Click="Button_Click" Background="Green"/>
        <Button Grid.Row="5" Content="Default Ip and Port" Margin="5" Click="Button_Click_1" Background="Green"/>
        <Button Grid.Row="6" Content="Exit" Margin="5" Click="Button_Click_2" Background="Red"/>

    </Grid>
</Window>